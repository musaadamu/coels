{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.cjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["**"],
        "nodeVersion": "18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "backend/server.cjs"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

